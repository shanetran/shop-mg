<div class="container">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<h3> Sign up </h3>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

				<div class="form-group">
					<label for="">Email:</label>
					<%= f.email_field :email, autofocus: true, class: "form-control" %>
				</div>

				<div class="form-group">
					<label for="">Password:</label>
					<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %>
					<br />
					<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				</div>

				<div class="form-group">
					<label for="">Password Confirm:</label>
					<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
				</div>

				<div class="form-group">
					<label for="">Full Name:</label>
					<%= f.text_field :name, autofocus: true, class: "form-control" %>
				</div>
				<div class="form-group">
					<label for="">Birth Day:</label>
					<div class="input-append date">
						<input type="text" name="user[birthday]" class="birthday-picker form-control" value="<%= Time.now.strftime("%F") %>">
						<span class="add-on"><i class="icon-th"></i></span>
					</div>
					<script>
						$(function() {
							$('.birthday-picker').datepicker({
								format : "yyyy-mm-dd"
							})
						});
					</script>
				</div>
				<div class="form-group">
					<label for="">Gender:</label>
					<select class="selectpicker show-tick form-control" name="user[gender]">
						<option value="true">Male</option>
						<option value="false">Female</option>
					</select>
				</div>
				<div class="form-group">
					<label for="">Address:</label>
					<%= f.text_area :address, autofocus: true, class: "form-control" %>
				</div>
				<div class="form-group">
					<label for="">Phone:</label>
					<%= f.text_field :phone, autofocus: true, class: "form-control" %>
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-primary" data-disable-with="<i class='fa fa-spinner fa-spin'></i> Processing">
						Sign up
					</button>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
